<h2 class="text-center mt-3"> Crée ton Gossip </h2>

<section class="d-flex flex-column text-center align-items-center mt-5">
	<div class="card w-25 mb-5 border-0">
		<form action='<%= gossips_path %>' method='POST' class="d-flex justify-content-center flex-column align-items-center">
		      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
		      <input class="form-control" type="text" name='gossip_username' placeholder="Nom de commère"><br/>
		      <input class="form-control" type="text" name='gossip_title' placeholder="Nomme ton histoire"><br/>
		      <textarea class="form-control" type="text" name='gossip_content' placeholder="Ici, ton gros secret"></textarea><br/>
		      <button type="submit" class="btn btn-secondary btn-lg btn-block">Balance ton histoire salace</button>
		</form>
	</div>
</section>

