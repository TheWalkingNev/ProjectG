<div class="d-flex justify-content-center mt-5">
		<!-- Card -->
		<div class="card">

		  <!-- Card image -->
		  <div class="view overlay">
		    <img class="card-img-top" src="https://media.giphy.com/media/VPXKw1SP1Iz4I/giphy.gif" alt="Card image cap">
		    <a>
		      <div class="mask rgba-white-slight"></div>
		    </a>
		  </div>

		  <!-- Button -->
		  <a class="btn-floating btn-action ml-auto mr-4 mdb-color lighten-3"></a>

		  <!-- Card content -->
		  <div class="card-body">

		  	<h4 class="card-title"><%= link_to "#{@gossip_user_username}", user_path(@gossip_user_id) %></h4>

		    <!-- Title -->
		    <h4 class="card-title"><%= @gossip_title %></h4>
		    <hr>
		    <!-- Text -->
		    <p class="card-text"><%= @gossip_content %></p>

		  </div>

		  <!-- Card footer -->
		  <div class="rounded-bottom mdb-color lighten-3 text-center pt-3">
		    <ul class="list-unstyled list-inline font-small">
		      <li class="list-inline-item pr-2 white-text"><i class="far fa-clock pr-1 ml-2 mr-2"></i><%= @gossip_created_at %></li>
		    </ul>
		  </div>

		</div>
		<!-- Card -->
</div>
