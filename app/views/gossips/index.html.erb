<section class="mt-3">
	<div class="container">
	  <h2 class="text-center">Ã€ ce jour il y a <%= Gossip.all.count %> gossips</h2>
	  <p></p>
	  <table class="table">
	    <thead>
	      <tr>
	        <th>Pseudo</th>
	        <th>Titre</th>
	        <th>Commentaires</th>
	        <th></th>
	      </tr>
	    </thead>
	    <% Gossip.all.reverse.each do |gossip| %>
		    <tbody>
		      <tr>
		        <td><a class="" href="<%= user_path(gossip.user.id) %>"><%= gossip.user.username %></a></td>
		        <td><a class="" href="<%= gossip_path(gossip.id) %>"><%= gossip.title %></a></td>
		        <td><i class="far fa-comments mr-2"></i><%= gossip.comments.count %></td>
		        <td>
						<% if logged_in?(current_user) %>
							<%= current_user.id == gossip.user_id ? (link_to "Edit Gossip", edit_gossip_path(gossip.id)) : nil %>
							<%= current_user.id == gossip.user_id ? (link_to "Delete Gossip", gossip_path(gossip.id), method: :delete) : nil %>
							<%= link_to like_gossip_path(gossip.id), method: :put do %>
								<% if !current_user.liked? gossip %>
									<i class="far fa-heart"></i>
								<% else %>
									<i class="fas fa-heart text-danger"></i>
								<% end %>
								<%= gossip.get_upvotes.size %>
							<% end %>
						<% end %>
						</td>
		      </tr>
		    </tbody>
	    <% end %>
	  </table>
	</div>
</section>
<script src="vote.js.erb" charset="utf-8"></script>
