<section>
  <p><%= @user_first_name %> <%= @user_last_name %> <span class="text-danger ml-2 mr-2"> aka </span> <%= @user_username %><br>
  <%= @user_description %><br>
  <%= @user_age %> ans<br>
  <%= @user_email %><br>
  <%= link_to "#{@user_city_name}", city_path(@user_city_id) %><br></p>
  <p>Tout ses gossips <br>
  <% @user_gossips.each do |gossip| %>
    <%= gossip.title %>
    <%= link_to 'Voir le gossip', gossip_path(gossip.id) %><br>
  <% end %></p>
</section>
